<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <solid android:color="#4CAF50" />
                    <corners android:radius="15dp" />
                    <size android:width="60dp" android:height="30dp" />
                    <stroke android:width="2dp" android:color="#14000000" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_text_active" android:left="15dp" android:right="15dp"/>
        </layer-list>

    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <solid android:color="#F44336" />
                    <corners android:radius="15dp" />
                    <size android:width="60dp" android:height="30dp" />
                    <stroke android:width="2dp" android:color="#14000000" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_text_inactive" android:left="15dp" android:right="15dp" />
        </layer-list>
    </item>
</selector>